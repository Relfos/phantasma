<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhantasmaApp.Views.ItemDetailPage"
             Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Item.Author}" FontSize="Medium"/>
        <Label Text="{Binding Item.Author}" FontSize="Small" TextColor="Gray"/>
        <Label Text="{Binding Item.Title}" FontSize="Medium" />
        <Label Text="{Binding Item.Content}" FontSize="Small"/>
    </StackLayout>
</ContentPage>